.nav {
  display: flex;
  background: #fff;
}

.recommend, .Ranking, .search {
  flex: 1;
  position: relative;
  display: block;
  height: 40px;
  line-height: 40px;
  overflow: hidden;
  text-align: center;
  font-size: 16px;
  color: rgba(0, 0, 0, 0.6);
  box-sizing: border-box;
}

.current {
  color: #c69;
}

.currentbox {
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 2px;
  background: #c69;
}
